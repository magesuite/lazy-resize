<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magesuite" translate="label" sortOrder="300">
            <label>MageSuite</label>
        </tab>
        <section id="images" translate="label" type="text" sortOrder="920" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Images</label>
            <tab>magesuite</tab>
            <resource>MageSuite_LazyResize::config_imagesoptimization</resource>
            <group id="images_optimization" translate="label" type="text" sortOrder="250" showInDefault="1" showInWebsite="1">
                <label>Images Optimization</label>
                <field id="enable_optimization" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Images Optimization</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="images_optimization_level" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Optimization Level</label>
                    <comment>Acceptable value is between 0 and 100</comment>
                </field>
            </group>
        </section>
        <section id="dev" translate="label" type="text" sortOrder="10">
            <group id="lazy_resize" translate="label" type="hidden" sortOrder="10" showInDefault="1">
                <field id="token_secret" translate="label" type="hidden" sortOrder="10" showInDefault="1">
                    <label>Token secret</label>
                </field>
            </group>
        </section>
    </system>
</config>
